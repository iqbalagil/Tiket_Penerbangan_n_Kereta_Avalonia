<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Tiket_Penerbangan_n_Kereta.App"
             xmlns:local="using:Tiket_Penerbangan_n_Kereta"
             RequestedThemeVariant="Light">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/TemplateUI/DynamicColor.axaml" />
                <ResourceInclude Source="/TemplateUI/FluentThemeResource.axaml" />
                <ResourceInclude Source="/TemplateUI/TextBoxFluent.axaml" />
                <ResourceInclude Source="/TemplateUI/IconTemplate.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme DensityStyle="Compact" />
        <StyleInclude Source="avares://Avalonia.Themes.Fluent/FluentTheme.xaml" />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
        <StyleInclude Source="avares://Material.Icons.Avalonia/MaterialIconStyles.axaml" />
        <StyleInclude Source="/TemplateUI/DashboardUI.axaml" />
        <StyleInclude Source="/TemplateUI/TemplateAirlanes.axaml" />
    </Application.Styles>
</Application>