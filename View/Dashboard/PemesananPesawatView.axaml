<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1080" d:DesignHeight="1080"
             x:Class="Tiket_Penerbangan_n_Kereta.View.Dashboard.PemesananPesawatView"
			 x:CompileBindings="True">
	
	<Border  Opacity="10"  CornerRadius="8" Margin="10 50 10 0"  VerticalAlignment="Top" Background="#fafcff" >
		<StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
			<Grid ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="Auto,Auto,Auto" Margin="100">
				<ComboBox  Width="250" Height="40" Classes="changeLocation" FontSize="16" Grid.Row="0" Grid.Column="0" Margin="5">
				</ComboBox>
				<ComboBox  Width="250" Height="40" Classes="changeLocation" FontSize="16"  Grid.Row="0" Grid.Column="1" Margin="5">
					
				</ComboBox>
				<TextBox Width="350" Classes="searchField" FontSize="16" Grid.Row="0" Grid.Column="2" Margin="5"/>
			</Grid>
			<Grid
			      RowDefinitions="Auto,*"
			      HorizontalAlignment="Center"
			      ShowGridLines="True"
			      >
				<Border Grid.Row="0"
				                CornerRadius="8"
				                Background="Red"
				                Width="400"
				                Height="150">
					<Border
						Background="{DynamicResource PrimaryColor}"
						Width="390">
						<StackPanel
							Orientation="Horizontal"
							VerticalAlignment="Center"
							Background="Blue"
							Height="100">
							<Grid
								RowDefinitions="Auto, *"
								ColumnDefinitions="Auto, *, *"
								ShowGridLines="True">
								<Image Width="100" Height="45" Grid.Column="0" Grid.Row="0"/>
								<StackPanel Grid.Column="1" Grid.Row="0"
								            VerticalAlignment="Center" HorizontalAlignment="Center"
								            Spacing="10"
								            >
									<TextBox Text="hello" TextAlignment="Center" Height="45"/>
									<TextBox Text="hello"  TextAlignment="Center" Height="45"/>
								</StackPanel>
							</Grid>
						</StackPanel>
					</Border>
				</Border>
				<Border Grid.Row="1"
				        CornerRadius="8"
				        Background="Red"
				        Width="400"
				        Height="150">
					<Border
						Background="{DynamicResource PrimaryColor}"
						Width="390">
						<StackPanel
							Orientation="Horizontal"
							VerticalAlignment="Center"
							Background="Blue"
							Height="100">
							<Grid
								RowDefinitions="1"
								ColumnDefinitions="Auto, *, *"
								ShowGridLines="True">
								<Image Width="100" Height="45" Grid.Column="0" Grid.Row="0"/>
								<StackPanel Grid.Column="1" Grid.Row="0"
								            VerticalAlignment="Center" HorizontalAlignment="Center"
								            Spacing="10"
								>
									<TextBox Text="hello" TextAlignment="Center" Height="45"/>
									<TextBox Text="hello"  TextAlignment="Center" Height="45"/>
								</StackPanel>
							</Grid>
						</StackPanel>
					</Border>
				</Border>
			</Grid>
		</StackPanel>

		
	</Border>

</UserControl>
