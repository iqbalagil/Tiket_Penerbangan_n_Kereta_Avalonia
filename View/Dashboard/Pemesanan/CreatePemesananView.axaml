<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tiket_Penerbangan_n_Kereta.View.Dashboard.Pemesanan.CreatePemesananView">
    <Border Background="{DynamicResource PrimaryColor}" CornerRadius="4"
        Classes="card"
        Padding="10"
        Margin="10">
        <Grid ShowGridLines="True" ColumnDefinitions="Auto, Auto" RowDefinitions="Auto, Auto, Auto, Auto, Auto">
            <StackPanel Spacing="10" Margin="5">
                <TextBlock Text="Kode Pesawat"/>
                <TextBox Classes="inputField" Width="350"/>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="10" Margin="5">
                <TextBlock Text="Total Bayar"/>
                <TextBox Classes="inputField" Width="350"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="0" Spacing="10" Margin="5">
                <TextBlock Text="Tempat Awal"/>
                <ComboBox Width="350" Height="40"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" Spacing="10" Margin="5">
                <TextBlock Text="Tempat Tujuan"/>
                <ComboBox Width="350" Height="40"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="0" Spacing="10" Margin="5">
                <TextBlock Text="Jam Berangkat"/>
                <TimePicker Width="350" Height="40"
                            ClockIdentifier="24HourClock"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="1" Spacing="10" Margin="5">
                <TextBlock Text="Jam Tiba"/>
                <TimePicker Width="350" Height="40"
                            ClockIdentifier="24HourClock"/>
            </StackPanel>
            <StackPanel Grid.Row="3" Grid.Column="0" Spacing="10" Margin="5">
                <TextBlock Text="Tanggal Berangkat"/>
                <DatePicker DayFormat="ddd dd"
                    />
            </StackPanel>
            <Button Grid.Row="4" Grid.Column="0"  Classes="buttonCustom" Width="100" Height="40" Margin="0 10 0 0" 
                     FontSize="16" >Create</Button>
        </Grid>
        
    </Border>
</UserControl>
