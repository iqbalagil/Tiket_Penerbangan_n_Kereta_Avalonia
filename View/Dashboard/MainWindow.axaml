<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="1080"
        xmlns:vm="clr-namespace:Tiket_Penerbangan_n_Kereta.View.Dashboard"
        xmlns:material="using:Material.Icons.Avalonia"
		x:Class="Tiket_Penerbangan_n_Kereta.View.Dashboard.MainWindow"
        Title="MainWindow"
		WindowState="FullScreen"
        x:DataType="vm:MainWindowViewModel"
        x:CompileBindings="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        ExtendClientAreaToDecorationsHint="True"
        CanResize="True">

	<Window.DataContext>
		<vm:MainWindowViewModel/>
	</Window.DataContext>

	<Border
        Background="WhiteSmoke"
        DockPanel.Dock="Top"
        BorderThickness="2"
		ClipToBounds="True"
        BorderBrush="LightGray"
        CornerRadius="10">

		<DockPanel HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Name="ContentWrapper"
				   
				   Margin="2,0">
			<Border Background="{DynamicResource PrimaryColor}"
				   DockPanel.Dock="Top"
				   BoxShadow="0 -25 100 0 DarkGray"
				   >
			    <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
					Spacing="0"
					Margin="0">

				        <Button Name="MinimizedCommand"  Width="30" Background="{DynamicResource PrimaryColor}" Command="{Binding MinimizeCommand}" Height="25">
							<material:MaterialIcon Kind="Minimize"/>
						</Button>
				        <Button Name="MaximizeCommand" Width="30" Background="{DynamicResource PrimaryColor}" Command="{Binding MaximizeCommand}" Height="25">
							<material:MaterialIcon Kind="Maximize"/>
						</Button>
				        <Button Name="ExitCommand" Width="30" Background="{DynamicResource PrimaryColor}" Command="{Binding ClosedCommand}" Height="25">
							<material:MaterialIcon Kind="Close"/>
						</Button>

			    </StackPanel>
			</Border>
			<Border
				DockPanel.Dock="Left"
				Background="{DynamicResource PrimaryColor}"
				Width="50">
				<StackPanel
					Margin="0 15 5 0"
					Spacing="16"
					Orientation="Vertical"
					HorizontalAlignment="Center">
					
					<Button Classes="blueButton"/>
					<Button Classes="blueButton"/>
					<Button Classes="blueButton"/>
					<Button Classes="blueButton"/>
					<Button Classes="blueButton"/>

				</StackPanel>

				
			</Border>
			<Panel
				Margin="10"
				Width="{Binding Bounds.Width, RelativeSource={RelativeSource AncestorType=Window}}">

				
			</Panel>

		</DockPanel>
	</Border>

</Window>