<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tiket_Penerbangan_n_Kereta.View.Dashboard.CreateMaskapaiView"
             xmlns:vm="clr-namespace:Tiket_Penerbangan_n_Kereta.ViewModel.Dashboard"
             xmlns:flex="clr-namespace:Avalonia.Flexbox;assembly=Avalonia.Flexbox"
             x:CompileBindings="True"
             x:DataType="vm:CreateMaskapaiViewModel">
    <DockPanel>

        <Border Background="{DynamicResource PrimaryColor}" CornerRadius="4"
                Classes="card"
            Margin="10" Padding="10">
            <Grid ShowGridLines="True" RowDefinitions="Auto, Auto,Auto">
                <StackPanel Grid.Row="0"
                            HorizontalAlignment="Left">
                    <TextBlock Text="Maskapai Type" Margin="0 10 0 10"/>
                    <TextBox Classes="inputField" Text="{Binding MaskapaiName}"/>
                </StackPanel>
                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Left">
                    <TextBlock Text="Decsription" Margin="0 10 0 10"/>
                    <TextBox Classes="inputField" TextWrapping="Wrap" AcceptsReturn="True"  Height="100"
                             Text="{Binding DescMaskapai}"/>
                </StackPanel>
                <Button Grid.Row="2" Classes="buttonCustom" Width="100" Height="40" Margin="0 10 0 0" 
                        FontSize="16" Command="{Binding CreateMaskapaiCommand}">Create</Button>
            </Grid>
        </Border>
    </DockPanel>
    
</UserControl>
